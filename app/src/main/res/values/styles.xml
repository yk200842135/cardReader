<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="black70style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_black_70</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="selectdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <!-- <item name="android:windowBackground">@color/alpha_bg</item>背景透明-->
        <item name="android:windowBackground">@drawable/custom_spinner</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="progressBarHorizontal_color" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <!-- 这个属性就是配置进度的颜色和背景的颜色 -->
        <item name="android:progressDrawable">@drawable/bg_progressbar_upload</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
    </style>

    <style name="myProgressBarStyleLarge">
        　　<item name="android:indeterminateDrawable">@drawable/progress_large_loading</item>
        　　<item name="android:minWidth">55dp</item>
        　　<item name="android:maxWidth">55dp</item>
        　　<item name="android:minHeight">55dp</item>
        　　<item name="android:maxHeight">55dp</item>
    </style>

</resources>
